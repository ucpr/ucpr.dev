---
import Header from "../components/Header";
import Footer from "../components/Footer";

interface OGP {
	title: string;
	description: string;
	url: string;
	url_path: string;
}

interface Props {
	title: string;
	ogp?: OGP;
}

const { title, ogp } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="ucpr.dev" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    { ogp !== undefined &&
      <meta property="og:url" content={ogp.url} />
      <meta property="og:type" content="article" />
      <meta property="og:title" content={ogp.title} />
      <meta property="og:description" content={ogp.description} />
      <meta property="og:site_name" content="ucpr.dev" />
      <meta property="og:image" content={`https://ogpgen.ucpr.dev/?text=${ ogp.title }&author=@ucpr&title=ucpr.dev`} />
      <meta name="twitter:card" content="summary_large_image" />
      <meta name="twitter:site" content="@u_chi_ha_ra_" />
    }
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap" rel="stylesheet">
		<title>{title}</title>
    <script is:inline type="text/partytown" src="https://www.googletagmanager.com/gtag/js?id=G-MZHE63WMP3"></script>
    <script is:inline type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-MZHE63WMP3");
    </script>
	</head>
	<body class="max-w-xl mx-auto">
    <Header />
		<slot />
    <Footer />
	</body>
</html>

<style is:global>
	html {
    font-family: "Noto Sans JP", sans-serif;
    font-optical-sizing: auto;
	}
	code {
    font-family: "Source Code Pro", monospace;
    font-optical-sizing: auto;
	}
</style>
